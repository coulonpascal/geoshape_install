# Install CentOS 6.7 minimal

# To enable network
vi /etc/sysconfig/network-scripts/ifcfg-eth0
change ONBOOT=no to ONBOOT=yes
:wq # to save and quit

# install nano
yum install -y nano

# set static ip
nano /etc/sysconfig/network-scripts/ifcfg-eth0
# sample ifcfg-eth0 file for a system using a fixed IP address:
DEVICE=eth0 
BOOTPROTO=none 
ONBOOT=yes 
NETMASK=255.255.255.0 
IPADDR=10.0.1.27 
USERCTL=no

# shutdown CentOS
/sbin/shutdown -h now

# create non-root user and add to sudoers

sudo su -
cd /etc/yum.repos.d/
wget  http://yum.boundlessps.com/geoshape.repo
yum -y install geoshape
exit
sudo geoshape-config init <ip or domain>


